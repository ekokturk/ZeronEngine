{
	"version": 3,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 22,
		"patch": 3
	},
	"configurePresets": [
		{
			"name": "base",
			"binaryDir": "${sourceDir}/Build/${presetName}",
			"cacheVariables": {
				"CMAKE_CXX_STANDARD": "17",
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "Win32_x64",
			"displayName": "Windows Desktop 64-bit",
			"generator": "Visual Studio 17 2022",
			"inherits": [ "base"],
			"architecture": {
				"value": "x64",
				"strategy": "set"
			},
			"cacheVariables": {
				"CMAKE_C_COMPILER": "cl",
				"CMAKE_CXX_COMPILER": "cl",
				"ZERON_SANDBOX": true,
				"ZERON_TEST_FRAMEWORK": true
			}
		},
		{
			"name": "Linux",
			"displayName": "Linux",
			"generator": "Ninja",
			"inherits": [ "base"],
			"cacheVariables": {
				"CMAKE_C_COMPILER": "clang",
				"CMAKE_CXX_COMPILER": "clang++",
				"CMAKE_CXX_FLAGS": "-fPIC",
				"ZERON_SANDBOX": true,
				"ZERON_TEST_FRAMEWORK": true
			},
			"vendor": {
				"microsoft.com/VisualStudioSettings/CMake/1.0": {
					"hostOS": [ "Linux" ]
				},
				"microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
					"sourceDir": "$env{PWD}",
					"copySources": false
				}
			}
		}
	],
	"buildPresets": [
	],
	"testPresets": [
		{
			"name": "Linux-Test",
			"configurePreset": "Linux"
		}
	]
}